<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4F8F5"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editActivityName"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_activity_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityEndTime"
        android:layout_width="411dp"
        android:layout_height="50dp"

        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_time_end"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_end_time"
        android:inputType="datetime"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityStartTime"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityPeople"
        android:layout_width="411dp"
        android:layout_height="50dp"

        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_people"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_max_people"
        android:inputType="number"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityLocation"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityCost"
        android:layout_width="411dp"
        android:layout_height="50dp"

        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_cost"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_cost"
        android:inputType="number"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityPeople"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityTag"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:drawableEnd="@drawable/ic_tag"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_tag"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityCost"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityDescription"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_description"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityName"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityStartTime"
        android:layout_width="411dp"
        android:layout_height="50dp"

        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_time_start"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_start_time"
        android:inputType="time"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityDescription"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <EditText
        android:id="@+id/editActivityLocation"
        android:layout_width="411dp"
        android:layout_height="50dp"

        android:autofillHints=""
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:clickable="false"
        android:drawableEnd="@drawable/ic_location"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/please_enter_location"
        android:inputType="text"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editActivityEndTime"
        tools:ignore="TextContrastCheck"
        tools:textAlignment="gravity" />

    <TextView
        android:id="@+id/createActivityTitle"
        android:layout_width="411dp"
        android:layout_height="43dp"
        android:background="#73FDED"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/create_your_activity"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#243EBD"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/createActivitySubmit"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="sumbitCreateActivity"
        android:text="@string/create"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#000000" />

    <Switch
        android:id="@+id/activityIsPublic"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginTop="656dp"
        android:layout_marginEnd="208dp"
        android:checked="true"
        android:fontFamily="sans-serif-smallcaps"
        android:minHeight="48dp"
        android:text="@string/make_public"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alertTextView"
        android:layout_width="227dp"
        android:layout_height="112dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/alert_received"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="147dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/common_google_signin_btn_text_light_focused"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/editActivityName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/different_sports" />

    <Button
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_back"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>